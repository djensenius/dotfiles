// Default layout with status bar at top
// Using zjstatus plugin for customizable status bar matching tmux aesthetic

layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" {
                format_left  "{mode}#[bg=#181825] {tabs}"
                format_right "#[bg=#181825,fg=#89b4fa] {session} #[bg=#181825,fg=#a6e3a1] {datetime}"
                format_space ""
                format_hide_on_overlength "true"
                format_precedence "lrc"

                border_enabled  "false"
                border_char     "─"
                border_format   "#[fg=#6C7086]{char}"
                border_position "bottom"

                mode_normal        "#[bg=#89b4fa,fg=#1e1e2e,bold] NORMAL#[bg=#181825] "
                mode_locked        "#[bg=#f38ba8,fg=#1e1e2e,bold] LOCKED#[bg=#181825] "
                mode_resize        "#[bg=#fab387,fg=#1e1e2e,bold] RESIZE#[bg=#181825] "
                mode_pane          "#[bg=#a6e3a1,fg=#1e1e2e,bold] PANE#[bg=#181825] "
                mode_tab           "#[bg=#f9e2af,fg=#1e1e2e,bold] TAB#[bg=#181825] "
                mode_scroll        "#[bg=#f5c2e7,fg=#1e1e2e,bold] SCROLL#[bg=#181825] "
                mode_enter_search  "#[bg=#89dceb,fg=#1e1e2e,bold] SEARCH#[bg=#181825] "
                mode_search        "#[bg=#89dceb,fg=#1e1e2e,bold] SEARCH#[bg=#181825] "
                mode_rename_tab    "#[bg=#f9e2af,fg=#1e1e2e,bold] RENAME#[bg=#181825] "
                mode_rename_pane   "#[bg=#a6e3a1,fg=#1e1e2e,bold] RENAME#[bg=#181825] "
                mode_session       "#[bg=#fab387,fg=#1e1e2e,bold] SESSION#[bg=#181825] "
                mode_move          "#[bg=#f5c2e7,fg=#1e1e2e,bold] MOVE#[bg=#181825] "
                mode_prompt        "#[bg=#89b4fa,fg=#1e1e2e,bold] PROMPT#[bg=#181825] "
                mode_tmux          "#[bg=#fab387,fg=#1e1e2e,bold] TMUX#[bg=#181825] "

                // Rounded tabs with nerd font icons
                tab_normal              "#[bg=#313244,fg=#cdd6f4]  {index} {name} #[bg=#181825,fg=#313244]"
                tab_normal_fullscreen   "#[bg=#313244,fg=#cdd6f4]  {index} {name} 󰊓 #[bg=#181825,fg=#313244]"
                tab_normal_sync         "#[bg=#313244,fg=#cdd6f4]  {index} {name}  #[bg=#181825,fg=#313244]"
                
                tab_active              "#[bg=#585b70,fg=#cdd6f4,bold]  {index} {name} #[bg=#181825,fg=#585b70]"
                tab_active_fullscreen   "#[bg=#585b70,fg=#cdd6f4,bold]  {index} {name} 󰊓 #[bg=#181825,fg=#585b70]"
                tab_active_sync         "#[bg=#585b70,fg=#cdd6f4,bold]  {index} {name}  #[bg=#181825,fg=#585b70]"

                tab_separator           ""

                // Session and datetime
                session        " {name}"
                datetime       " {format}"
                datetime_format "%a %d %b %H:%M"
                datetime_timezone "local"
            }
        }
    }
}
