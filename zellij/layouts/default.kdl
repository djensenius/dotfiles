// Default layout with status bar at top
// Using zjstatus plugin for customizable status bar matching tmux aesthetic

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="https://github.com/dj95/zjstatus/releases/download/v0.21.1/zjstatus.wasm" {
                format_left  "{mode}#[bg=#181825] {tabs}"
                format_right "#[fg=#89b4fa,bg=#181825] {session} #[fg=#a6e3a1,bg=#181825]{datetime}"
                format_space "#[bg=#181825]"

                hide_frame_for_single_pane "true"

                mode_normal        "#[bg=#89b4fa,fg=#1e1e2e,bold] NORMAL "
                mode_locked        "#[bg=#f38ba8,fg=#1e1e2e,bold] LOCKED "
                mode_resize        "#[bg=#fab387,fg=#1e1e2e,bold] RESIZE "
                mode_pane          "#[bg=#a6e3a1,fg=#1e1e2e,bold] PANE "
                mode_tab           "#[bg=#f9e2af,fg=#1e1e2e,bold] TAB "
                mode_scroll        "#[bg=#f5c2e7,fg=#1e1e2e,bold] SCROLL "
                mode_enter_search  "#[bg=#89dceb,fg=#1e1e2e,bold] SEARCH "
                mode_search        "#[bg=#89dceb,fg=#1e1e2e,bold] SEARCH "
                mode_rename_tab    "#[bg=#f9e2af,fg=#1e1e2e,bold] RENAME "
                mode_rename_pane   "#[bg=#a6e3a1,fg=#1e1e2e,bold] RENAME "
                mode_session       "#[bg=#fab387,fg=#1e1e2e,bold] SESSION "
                mode_move          "#[bg=#f5c2e7,fg=#1e1e2e,bold] MOVE "
                mode_prompt        "#[bg=#89b4fa,fg=#1e1e2e,bold] PROMPT "
                mode_tmux          "#[bg=#fab387,fg=#1e1e2e,bold] TMUX "

                // Rounded tabs with nerd font icons
                tab_normal              "#[fg=#313244,bg=#181825]#[fg=#cdd6f4,bg=#313244] {index} {name} {fullscreen_indicator}{sync_indicator}{floating_indicator}#[fg=#313244,bg=#181825]"
                tab_active              "#[fg=#585b70,bg=#181825]#[fg=#cdd6f4,bg=#585b70,bold] {index} {name} {fullscreen_indicator}{sync_indicator}{floating_indicator}#[fg=#585b70,bg=#181825]"

                tab_fullscreen_indicator "󰊓 "
                tab_sync_indicator       " "
                tab_floating_indicator   "󰉈 "

                // Session and datetime
                session          " {name} "
                datetime         " {format} "
                datetime_format  "%a %d %b %H:%M"
                datetime_timezone "local"
            }
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }
}
