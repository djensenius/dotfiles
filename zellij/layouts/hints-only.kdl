// Hints-only layout - shows only keybinding hints bar (compact-bar)
// No status bar at top, just the keybinding help at bottom
// Perfect for users who want to see what keys do without extra UI

layout {
    default_tab_template {
        children
        pane size=2 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }
}
